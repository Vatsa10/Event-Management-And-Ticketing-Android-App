<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/organizerPage_layoutEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/organizerPageItem_eventName"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:background="#e0dfdc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"

            />
    </LinearLayout>

    <ImageView
        android:id="@+id/organizerPageItem_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/organizerPage_layoutEventTitle"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/test_rect" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/organizerPageItem_image"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/calendar"
                />
            <TextView
                android:id="@+id/organizerPageItem_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Date"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/clock"
                />
            <TextView
                android:id="@+id/organizerPageItem_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"

                android:text="Time"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>